<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/background"
    android:orientation="vertical"
    android:gravity="center_horizontal"
    tools:context="com.dontrun.plz.besthj.MainActivity">

    <LinearLayout
        android:id="@+id/person_banner"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ImageButton
            android:id="@+id/person_head"
            android:layout_width="90dp"
            android:layout_height="90dp"
            />
        <TextView
            android:id="@+id/person_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/person_name"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            />
        <TextView
            android:id="@+id/person_school"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/person_school"
            android:textColor="@color/text"
            android:textSize="20sp"
            android:layout_marginBottom="15dp"
            />
        <ImageButton
            android:id="@+id/logout_btn"
            android:layout_width="30dp"
            android:layout_height="30dp"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/sport_progress"
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="120dp">

        <ProgressBar
            android:id="@+id/sport_progress_bar"
            style="@android:style/Widget.ProgressBar.Horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:max="100"
            android:progress="18" />
        <TextView
            android:id="@+id/sport_progress_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            android:text="@string/sport_progress_text"
            android:textColor="@color/text"
            android:textSize="14sp"
            />
    </LinearLayout>

    <Button
        android:id="@+id/start_run"
        android:layout_width="140dp"
        android:layout_height="60dp"
        android:text="开始跑步"/>

    <TextView
        android:id="@+id/logs_view"
        android:layout_width="300dp"
        android:layout_height="fill_parent"
        android:text="@string/app_name"
        android:textColor="@color/text"
        android:textSize="14sp"
        />

</LinearLayout>
